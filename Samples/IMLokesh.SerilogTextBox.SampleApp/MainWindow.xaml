<Window
    x:Class="IMLokesh.SerilogTextBox.SampleApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IMLokesh.SerilogTextBox.SampleApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:stb="http://imlokesh.com/serilog/textbox"
    Title="IMLokesh.SerilogTextBox.SampleApp"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <stb:LogTextBox Margin="10" TextBoxSink="{Binding TextBoxSink}" />
        <StackPanel
            Grid.Row="1"
            Margin="10,0,10,10"
            Orientation="Horizontal">
            <Button Click="Button_Click">Add Log Message</Button>
        </StackPanel>
    </Grid>
</Window>
